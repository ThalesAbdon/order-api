{
  "name": "order-api",
  "version": "1.0.0",
  "description": "API de pedidos com GraphQL, Apollo Server, Prisma e TypeScript",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "setup": "bash scripts/setup.sh",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:dev": "prisma migrate dev",
    "prisma:seed": "ts-node prisma/seed.ts",
    "test:setup": "docker compose -f docker-compose.test.yml up -d && sleep 3 && DATABASE_URL=postgresql://postgres:postgres@localhost:5433/order_api_test npx prisma migrate deploy",
    "test": "jest --runInBand --forceExit",
    "test:coverage": "jest --coverage --runInBand --forceExit"
  },
  "dependencies": {
    "@apollo/server": "^5.4.0",
    "@prisma/adapter-pg": "^7.4.1",
    "@prisma/client": "^7.4.1",
    "dotenv": "^17.3.1",
    "graphql": "^16.13.0",
    "graphql-tag": "^2.12.6",
    "prisma": "^7.4.1",
    "ts-node": "^10.9.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@types/node": "^22.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
